            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://mysql.stud.iie.ntnu.no:3306/sabines" />
            <property name="javax.persistence.jdbc.user" value="sabines" />
            <property name="javax.persistence.jdbc.password" value="YG5Z6XDl" />

